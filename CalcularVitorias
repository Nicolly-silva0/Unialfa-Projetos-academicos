import java.util.Scanner;

public class CalcularVitorias {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        
        System.out.print("Digite a pontuação do líder: ");
        int pontosLider = scanner.nextInt();
        
        System.out.print("Digite a pontuação do time da lanterna: ");
        int pontosLanterna = scanner.nextInt();
        
        
        int diferenca = pontosLider - pontosLanterna;
        
        
        int vitoriasNecessarias;
        
        if (diferenca <= 0) {
            
            vitoriasNecessarias = 0;
        } else {
            
            vitoriasNecessarias = (diferenca + 2) / 3;
        }
        
        System.out.println("Número mínimo de vitórias para alcançar o líder: " + vitoriasNecessarias);
        
        scanner.close();
    }
}
